ASF = "https://git-wip-us.apache.org/repos/asf/".

BaseUrl = case os:getenv("COUCH_GIT_BASE_URL") of
  false -> ASF;
  [] -> ASF;
  Else ->
    Else
end.

[
  {deps, [
      {lager, ".*", {git, BaseUrl ++ "couchdb-lager.git", {branch, "master"}}}
  ]},
  {erl_opts, [debug_info, {parse_transform, lager_transform}]}
].
